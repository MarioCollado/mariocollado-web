---
// src/components/Film.astro
---

<section
  id="film"
  class="h-screen flex flex-col justify-start items-center bg-primary-dark text-gray-800 relative overflow-hidden snap-start"
>
  <!-- Flecha para volver a la sección anterior -->
  <a
    href="#home"
    class="absolute top-8 left-1/2 transform -translate-x-1/2 cursor-pointer opacity-0 hover:opacity-100 transition-opacity duration-300"
  >
    <img
      src="/arrow-bottom-white.svg"
      alt="Flecha arriba"
      class="w-10 h-10 rotate-180"
    />
  </a>

  <div
    class="flex overflow-x-auto no-scrollbar space-x-4 p-4 w-full h-full items-center justify-start"
    style="scrollbar-width: none; -ms-overflow-style: none;"
  >
    <!-- Video 1 -->
    <div class="flex-shrink-0 w-1/3 relative">
      <video class="w-full h-auto object-contain" id="video-1">
        <source src="/videos/W-Snach2.webm" type="video/webm" />
      </video>
    </div>

    <!-- Foto 1 -->
    <div class="flex-shrink-0 w-1/3">
      <img
        src="/photos/bisabuelos.webp"
        alt="Descripción de la foto"
        class="w-full h-auto object-contain"
      />
    </div>

    <!-- Foto 2 -->
    <div class="flex-shrink-0 w-1/3">
      <img
        src="/photos/flor-y.webp"
        alt="Otra imagen"
        class="w-full h-auto object-contain"
      />
    </div>

    <!-- Foto 3 -->
    <div class="flex-shrink-0 w-1/3">
      <img
        src="/photos/dedal.webp"
        alt="Otra imagen"
        class="w-full h-auto object-contain"
      />
    </div>

    <!-- Video 2 -->
    <div class="flex-shrink-0 w-1/3 relative">
      <video class="w-full h-auto object-contain" id="video-2">
        <source src="/videos/V3atacama.webm" type="video/webm" />
      </video>
    </div>
  </div>

  <!-- Flecha para ir a la siguiente sección -->
  <a
    href="#music"
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 cursor-pointer opacity-0 hover:opacity-100 transition-opacity duration-300"
  >
    <img src="/arrow-bottom-white.svg" alt="Flecha abajo" class="w-10 h-10" />
  </a>

  <!-- Agregar JS aquí -->
  <script type="module" src="/src/js/scripts.js"></script>
</section>
