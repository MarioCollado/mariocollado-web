---
// src/components/other/MasonryGallery.astro
import content from "../../json/content.json";
---

<div class="columns-2 md:columns-3 lg:columns-4 gap-4 px-4">
  {
    content.map((item) => (
      <div class="mb-4 break-inside-avoid">
        {item.tipo === "foto" ? (
          <img
            src={item.ruta}
            alt={item.descripcion}
            class="w-full rounded-lg shadow-sm hover:shadow-md transition-shadow"
            loading="lazy"
          />
        ) : (
          <video
            src={item.ruta}
            autoplay
            muted
            loop
            class="w-full rounded-lg shadow-sm hover:shadow-md transition-shadow"
          />
        )}
      </div>
    ))
  }
</div>
