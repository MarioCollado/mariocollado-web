---
import content from "../../json/content.json";
---

<div class="grid">
  {
    content.map((item) => (
      <div class="grid-item">
        {item.tipo === "foto" ? (
          <img src={item.ruta} alt={item.descripcion} />
        ) : (
          <video src={item.ruta} autoplay />
        )}
      </div>
    ))
  }
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 10px;
    justify-content: center;
    align-items: start;
  }

  .grid-item {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .grid-item img,
  .grid-item video {
    max-width: 100%;
    height: auto;
    display: block;
  }
</style>
