---
// src/components/Contact.astro
---

<section
  id="contact"
  class="min-h-screen flex flex-col justify-center items-center bg-primary-light text-gray-800 relative snap-start py-8 md:py-12 overflow-hidden"
>
  <!-- Contenedor principal más compacto -->
  <div class="relative z-10 w-full max-w-md px-4">
    <div
      class="bg-white/50 p-6 md:p-8 rounded-lg border-4 border-black shadow-xl transform transition-all duration-300"
    >
      <!-- Encabezado más compacto -->
      <div class="text-center space-y-3 mb-6">
        <h1
          class="text-3xl md:text-4xl font-bold font-druk text-transparent bg-clip-text bg-gradient-to-r from-secondary-pink to-secondary-cyan"
        >
          CONTÁCTAME
        </h1>
        <p class="text-base md:text-lg text-gray-600">
          Escríbeme y responderé lo antes posible
        </p>
      </div>

      <!-- Formulario compacto -->
      <form class="space-y-4">
        <!-- Grupo Nombre -->
        <div class="space-y-1">
          <label class="block font-bold text-base md:text-lg">Nombre</label>
          <input
            type="text"
            class="w-full p-2 md:p-3 bg-white border-2 border-black rounded-none focus:border-secondary-pink focus:ring-1 focus:ring-secondary-cyan focus:shadow-[0_0_8px_0_rgba(236,72,153,0.3)] transition-all duration-200 placeholder-gray-400 text-sm md:text-base"
            placeholder="Tu nombre"
            required
          />
        </div>

        <!-- Grupo Email -->
        <div class="space-y-1">
          <label class="block font-bold text-base md:text-lg">Email</label>
          <input
            type="email"
            class="w-full p-2 md:p-3 bg-white border-2 border-black rounded-none focus:border-secondary-pink focus:ring-1 focus:ring-secondary-cyan focus:shadow-[0_0_8px_0_rgba(236,72,153,0.3)] transition-all duration-200 placeholder-gray-400 text-sm md:text-base"
            placeholder="tu@email.com"
            required
          />
        </div>

        <!-- Grupo Mensaje -->
        <div class="space-y-1">
          <label class="block font-bold text-base md:text-lg">Mensaje</label>
          <textarea
            rows="4"
            class="w-full p-2 md:p-3 bg-white border-2 border-black rounded-none focus:border-secondary-pink focus:ring-1 focus:ring-secondary-cyan focus:shadow-[0_0_8px_0_rgba(236,72,153,0.3)] transition-all duration-200 placeholder-gray-400 text-sm md:text-base"
            placeholder="¿En qué puedo ayudarte?"
            required></textarea>
        </div>

        <!-- Botón de enviar más compacto -->
        <button
          type="submit"
          class="w-full bg-gradient-to-r from-secondary-pink to-secondary-cyan text-white px-4 py-2 md:px-6 md:py-3 rounded-none border-2 border-black font-bold text-base hover:shadow-[0_4px_12px_0_rgba(236,72,153,0.3)] hover:translate-y-[-1px] transition-all duration-200 active:translate-y-0"
        >
          ENVIAR
        </button>
      </form>
    </div>
  </div>
</section>
