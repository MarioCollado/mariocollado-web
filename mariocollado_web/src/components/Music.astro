---
// src/components/Music.astro
import PlaylistCard from "./other/PlaylistCard.astro";
---

<section
  id="music"
  class="min-h-screen flex flex-col justify-center items-center bg-primary-light text-gray-800 relative snap-start py-8 md:py-12 overflow-hidden"
>
  <!-- Contenido principal centrado vertical y horizontalmente -->
  <div class="flex-1 flex flex-col items-center justify-center py-8">
    <!-- Cabecera centrada -->
    <div class="text-center mb-8 px-4">
      <h2
        class="text-3xl md:text-4xl font-bold font-druk text-transparent bg-clip-text bg-gradient-to-r from-secondary-pink to-secondary-cyan"
      >
        MÚSICA
      </h2>
      <p class="text-base md:text-lg text-gray-600 max-w-md mt-3 mx-auto">
        Descubre mis playlists y publicaciones musicales
      </p>
    </div>

    <!-- Contenedor de playlists perfectamente centrado -->
    <div class="w-full max-w-6xl px-4">
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 justify-items-center"
      >
        <PlaylistCard
          title="Todo lo que escucho"
          src="https://open.spotify.com/embed/playlist/5ccbwKAM3fMNbG82oq89dX?utm_source=generator&theme=0"
          class="w-full max-w-md"
          highlight={true}
        />

        <PlaylistCard
          title="Mi álbum 'la renaissance'"
          src="https://open.spotify.com/embed/album/7bqMbjBDH5YXqErJmON5nd?utm_source=generator"
          class="w-full max-w-md"
          highlight={true}
        />

        <PlaylistCard
          title="Exploración alternativa"
          src="https://open.spotify.com/embed/playlist/6nFATDq2kBuOpKh6mKABVz?utm_source=generator&theme=0"
          class="w-full max-w-md"
          highlight={true}
        />
      </div>
    </div>
  </div>
</section>
