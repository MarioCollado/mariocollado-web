---
// src/components/Music.astro
---

<section
  id="music"
  class="h-screen flex flex-col justify-center items-center bg-primary-light text-gray-800 relative space-y-8 snap-start"
>
  <!-- Flecha para volver a la secci칩n anterior -->
  <a
    href="#film"
    class="scrollButton absolute top-8 left-1/2 transform -translate-x-1/2 cursor-pointer opacity-0 hover:opacity-100 transition-opacity duration-300"
  >
    <div class="relative flex justify-center items-center">
      <!-- Efecto de sombra -->
      <div
        class="holdEffect absolute w-20 h-20 bg-secondary-orange rounded-full opacity-0 scale-0 hidden transition-all duration-1000 ease-out"
      >
      </div>

      <!-- Flecha -->
      <img
        src="/arrow-bottom.svg"
        alt="Flecha arriba"
        class="arrowIcon w-10 h-10 rotate-180 transition-opacity duration-500 ease-in-out"
      />

      <!-- Icono de verificaci칩n -->
      <img
        src="/icon-profile/icons8-home.png"
        alt="Verificado"
        class="verifiedIcon w-8 h-8 absolute opacity-0 scale-0 hidden transition-all duration-500 ease-out"
      />
    </div>
  </a>

  <!-- Contenedor de las 3 playlists en fila (horizontal) -->
  <div class="flex flex-row space-x-8 justify-center">
    <!-- Playlist 1 -->
    <div
      class="max-w-md w-full bg-secondary-cyan p-6 rounded-none border-4 border-black shadow-[8px_8px_0_0_black]"
    >
      <h2 class="text-2xl mb-4 text -center font-bold">Todo lo que escucho</h2>
      <iframe
        style="border-radius:0"
        src="https://open.spotify.com/embed/playlist/5ccbwKAM3fMNbG82oq89dX?utm_source=generator&theme=0"
        width="100%"
        height="500"
        allowfullscreen=""
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"></iframe>
    </div>

    <!-- Playlist 2 -->
    <div
      class="max-w-md w-full bg-secondary-orange p-6 rounded-none border-4 border-black shadow-[8px_8px_0_0_black]"
    >
      <h2 class="text-2xl mb-4 text-center font-bold">
        Escucha "la renaissance"
      </h2>
      <iframe
        style="border-radius:0"
        src="https://open.spotify.com/embed/album/7bqMbjBDH5YXqErJmON5nd?utm_source=generator"
        width="100%"
        height="500"
        allowfullscreen=""
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"></iframe>
    </div>

    <!-- Playlist 3 -->
    <div
      class="max-w-md w-full bg-secondary-red p-6 rounded-none border-4 border-black shadow-[8px_8px_0_0_black]"
    >
      <h2 class="text-2xl mb-4 text-center font-bold">M치s alternativo</h2>
      <iframe
        style="border-radius:0"
        src="https://open.spotify.com/embed/playlist/6nFATDq2kBuOpKh6mKABVz?utm_source=generator&theme=0"
        width="100%"
        height="500"
        allowfullscreen=""
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"></iframe>
    </div>
  </div>

  <!-- Flecha para ir a la siguiente secci칩n -->
  <a
    href="#tech"
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 cursor-pointer opacity-0 hover:opacity-100 transition-opacity duration-300"
  >
    <img src="/arrow-bottom.svg" alt="Flecha abajo" class="w-10 h-10" />
  </a>
</section>
